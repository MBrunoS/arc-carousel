---
import type { Props } from '@astrojs/starlight/props';
import CallToAction from './CallToAction.astro';

const { hero } = Astro.props.entry.data

const heroTitle = hero?.title
const heroTitleFirstWords = heroTitle?.split(' ').slice(0, -2).join(' ')
const heroTitleLastWords = heroTitle?.split(' ').slice(-2).join(' ')
---
<section class="max-w-screen-md px-4 pb-4 mx-auto my-12 md:my-24 sm:px-8">
  <div class="space-y-4 text-center">
    <h1 class="text-4xl font-bold text-gray-800 dark:text-white md:text-6xl">
      {heroTitleFirstWords} <br />
      <span class="text-accent-600 dark:text-accent-200"> {heroTitleLastWords}</span>
    </h1>
    <p class="leading-relaxed text-center md:text-xl">
      {hero?.tagline}
    </p>
  </div>
  
  <div class="flex flex-col items-center justify-center mt-12 space-y-3 sm:space-x-6 sm:space-y-0 md:!flex-row">
    {hero?.actions.map(action => (
      <CallToAction text={action.text} icon={action.icon as any} link={action.link} variant={action.variant} />
    ))}
  </div>
</section>